<% provide :title, t(".categories") %>

<div id="wrapper">
  <%= render "admin/sidebar" %>

  <div id="content-wrapper" class="d-flex flex-column">
    <div id="content">
      <div class="container-fluid">
        <h3 class="my-4"><%= t ".categories" %></h3>

        <table class="table table-hover">
          <thead><tr><th colspan="3"><%= t ".name" %></th></tr></thead>

          <tbody>
            <% @admin_categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td><%= link_to t(".edit"), edit_admin_category_path(category),
                  class: "card-link" %></td>
                <td><%= link_to t(".delete"), admin_category_path(category),
                  method: :delete, data: {confirm: t(".are_you_sure")},
                  class: "card-link" %></td>
              </tr>
            <% end %>
          </tbody>
        </table><br>

        <%= paginate @admin_categories %>

        <%= link_to t(".create_new"), new_admin_category_path, class: "card-link" %>
      </div>
    </div>
  </div>
</div>
