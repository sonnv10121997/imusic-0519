<% provide :title, t(".dashboard") %>

<h3 class="my-4"><%= t ".dashboard" %></h3>

<div class="row">
  <div class="col-md-4 mb-4">
    <div class="card border-left-danger shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <%= link_to admin_hot_path, class: "stretched-link card-link" do %>
              <div class="text-xs font-weight-bold text-danger text-uppercase
                mb-1"><%= t ".hot" %></div>
            <% end %>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= hot_albums_tracks_size %></div>
          </div>
          <div class="col-auto">
            <i class="fa fa-fire fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4 mb-4">
    <div class="card border-left-primary shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <%= link_to admin_albums_path, class: "stretched-link card-link" do %>
              <div class="text-xs font-weight-bold text-primary text-uppercase
                mb-1"><%= t ".albums" %></div>
            <% end %>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= @support.size Album.name %></div>
          </div>
          <div class="col-auto">
            <i class="fa fa-music fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4 mb-4">
    <div class="card border-left-success shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <%= link_to admin_artists_path, class: "stretched-link card-link" do %>
              <div class="text-xs font-weight-bold text-success text-uppercase
                mb-1"><%= t ".artists" %></div>
            <% end %>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= @support.size Artist.name %></div>
          </div>
          <div class="col-auto">
            <i class="fa fa-microphone fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4 mb-4">
    <div class="card border-left-info shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <%= link_to admin_categories_path, class: "stretched-link card-link" do %>
              <div class="text-xs font-weight-bold text-info text-uppercase
                mb-1"><%= t ".categories" %></div>
            <% end %>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= @support.size Category.name %></div>
          </div>
          <div class="col-auto">
            <i class="fa fa-folder-open fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4 mb-4">
    <div class="card border-left-warning shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <%= link_to admin_lyrics_path, class: "stretched-link card-link" do %>
              <div class="text-xs font-weight-bold text-warning
                text-uppercase mb-1"><%= t ".lyrics" %></div>
            <% end %>
            <div class="row no-gutters align-items-center">
              <div class="col-auto">
                <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">
                  <%= @support.size Lyric.name %>
                </div>
              </div>
              <div class="col">
                <div class="progress progress-sm mr-2">
                  <div class="progress-bar bg-warning" role="progressbar"
                    style="width: <%= approved_lyric_percent %>%"
                    aria-valuemin="0" aria-valuemax="100"></div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-auto">
            <i class="fa fa-file-text fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4 mb-4">
    <div class="card border-left-secondary shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <%= link_to admin_tracks_path, class: "stretched-link card-link" do %>
              <div class="text-xs font-weight-bold text-secondary text-uppercase
                mb-1"><%= t ".tracks" %></div>
            <% end %>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= @support.size Track.name %></div>
          </div>
          <div class="col-auto">
            <i class="fa fa-forward fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4 mb-4">
    <div class="card border-left-dark shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <%= link_to admin_users_path, class: "stretched-link card-link" do %>
              <div class="text-xs font-weight-bold text-dark text-uppercase
                mb-1"><%= t ".users" %></div>
            <% end %>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= @support.size User.name %></div>
          </div>
          <div class="col-auto">
            <i class="fa fa-users fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<a class="scroll-to-top rounded" href="#page-top" style="display: inline;">
  <%= fa_icon "angle-up" %>
</a>
