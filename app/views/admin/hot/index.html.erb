<% provide :title, t(".title") %>

<h3 class="my-4 offset-md-2"><%= t ".title" %></h3>

<%= form_for :hot, url: admin_hot_path, method: :patch do |form| %>
  <div class="form-row">
    <div class="form-group offset-md-2 col-2">
      <%= form.label :album_ids, t(".album") %>
      <%= form.select :album_ids, albums_reference_collection,
        {selected: hot_album_ids}, {class: "form-control h-100", multiple: true} %>
    </div>

    <div class="form-group col-2">
      <%= form.label :track_ids, t(".track") %>
      <%= form.select :track_ids, tracks_reference_collection,
        {selected: hot_track_ids}, {class: "form-control h-100", multiple: true} %>
    </div>
  </div>

  <%= form.submit t(".title"), class: "offset-md-2 mt-4 btn btn-primary" %>
<% end %>
